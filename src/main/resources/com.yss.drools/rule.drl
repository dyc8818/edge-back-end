rule "温度大于"
//no-loop true
when
    $terminal : Terminal(parameter>=terminal_value && name.equals("0") && symbol.equals("0") && operation.equals("0"))
/*    后面的参数是传感器数据*/
    then
        $terminal.setFlag1(1);
    end

rule "温度小于"
//no-loop true
when
    $terminal : Terminal(parameter<terminal_value && name.equals("0") && symbol.equals("1") && operation.equals("0"))

    then
        $terminal.setFlag1(2);
    end


rule "湿度大于"
//no-loop true
when
    $terminal : Terminal(parameter>=terminal_value && name.equals("1") && symbol.equals("0") && operation.equals("0"))

    then
        $terminal.setFlag2(1);
    end

rule "湿度小于"
//no-loop true
when
    $terminal : Terminal(parameter<terminal_value && name.equals("1") && symbol.equals("1") && operation.equals("0"))

    then
        $terminal.setFlag2(2);
    end
